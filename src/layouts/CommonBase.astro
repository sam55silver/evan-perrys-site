---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Evan Perry's Portfolio Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Evan Perry - {title}</title>
		<ViewTransitions />
	</head>
	<body class="h-screen flex flex-col px-12 py-4 container mx-auto">
		<slot />
		<footer class="mt-auto pt-12 pb-2 text-sm md:text-md">
			<p class="w-full text-center">Â© 2024 Evan Perry</p>
		</footer>
	</body>
</html>

<style is:global>
	@font-face {
		font-family: "Lusitana Regular";
		src: url('/fonts/Lusitana-Regular.ttf');
	}

	html {
		@apply font-sans text-gray-950;
		@apply bg-slate-50;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>

