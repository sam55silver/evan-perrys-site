---
interface Props {
	title: string;
	nav: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Evan Perry's Portfolio Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Evan Perry - {title}</title>
	</head>
	<body class="px-8">
		<h1 class="my-4 w-full text-center text-2xl font-bold">
			Evan Perry
		</h1>
		<hr class="mx-auto max-w-screen-md border-0 rounded bg-gray-600 h-0.5">
		<div class="w-full flex justify-center gap-6 mt-2">
			<a href="/">About</a>
			<a href="/documentary">Documentary</a>
			<a href="/photography">Photography</a>
		</div>
		<main class="container mx-auto mt-8">
			<slot />
		</main>
		<footer class="w-full text-center text-sm mt-8">
			<p>
				Â© 2021 Evan Perry
			</p>
		</footer>
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "Lusitana Regular";
		src: url('/fonts/Lusitana-Regular.ttf');
	}

	html {
		@apply font-sans text-gray-950;
		@apply bg-slate-50;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
