---
import CommonBase from '../../layouts/CommonBase.astro';
import { getEntry } from 'astro:content'
const { project } = Astro.params;
if (project == undefined) {
	return { status: 404 };
}

const photo = await getEntry('photography', project);
if (photo == undefined) {
	return { status: 404 };
}

const getImageClass = (isPortrait) => {
	return (isPortrait ? "h-full object-contain" : "w-full") + " mt-6"
}
---


<CommonBase title="zoom">
	<div class="h-[90svh] flex flex-col gap-2 md:gap-10 justify-center items-center">
		<img 
			transition:animate="fade"
			src={photo.data.cover} 
			alt={photo.data.title}
			class={getImageClass(photo.data.isPortrait)}
		/>
		<div class="text-center max-w-screen-sm mt-4" transition:animate="fade">
			<h1 class="text-md md:text-2xl font-bold">{photo.data.title}</h1>
			<p class="text-sm md:text-lg mt-2">{photo.data.description}</p>
		</div>
		<a href="/" class="mt-4 text-md md:text-xl pointer text-orange-600 underline block">
			Back
		</a>
	</div>
</CommonBase>
