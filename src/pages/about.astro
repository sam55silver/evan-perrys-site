---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About">
	<div class="w-full flex justify-center items-center">
		<div class="max-w-screen-md grid grid-cols-1 md:grid-cols-2 items-center gap-8">
			<img
				src="https://assets.samsilver.ca/evan-perry/evan.jpg"
	 			alt="Portrait of Evan Perry"
				class="w-fit object-cover h-[28rem]"
			/>
			<div>
				<h3 class="text-xl md:text-2xl font-bold mb-4">Hi, I'm Evan Perry.</h3>
				<p class="md:text-lg">
					A geology student at NSCC with a deep passion for photography, journalism, cooking, and the Earth's stories.
				</p>
			</div>
		</div>
	</div>
	<div class="mt-10 md:mt-20 max-w-screen-md mx-auto text-lg">
		<h3 class="text-xl md:text-2xl font-bold mt-10">Contact Me</h3>
		<div class="flex flex-col w-full gap-2">
			<div class="w-full">
				<label for="name" class="block mt-2">Name</label>
				<input type="text" id="name" class="contact-input" />
			</div>
			<div class="w-full">
				<label for="email" class="block mt-2">Email</label>
				<input type="email" id="email" class="contact-input" />
			</div>
		</div>
		<label for="message" class="block mt-2">Message</label>
		<textarea id="message" class="contact-input"></textarea>
		<button class="stuff w-full bg-orange-700">Send</button>
	</div>
</Layout>

<style>
	.stuff {
		@apply mt-4 text-white p-2 text-center rounded-none;
	}

	.contact-input {
		@apply w-full border-2 border-gray-300 rounded-md p-2 rounded-none;
	}
</style>
